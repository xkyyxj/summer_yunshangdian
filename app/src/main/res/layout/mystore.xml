<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_gravity="center_horizontal"
        android:background="#4fc0e8"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.06"
            android:gravity="center_horizontal"
            android:text="我的店铺"
            android:textColor="#ffffff"
            android:textSize="50px" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="96px"
            android:layout_height="96px"
            android:layout_weight="0.01"
            android:background="#00000000"
            android:src="@drawable/heartplus" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_below="@id/ll1"
        android:id="@+id/ll2">

        <ImageButton
            android:id="@+id/head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6px"
            android:layout_marginTop="5px"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/head1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/head"
            android:id="@+id/setinf">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 >

                <TextView
                    android:id="@+id/store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1.05"
                    android:text="店铺名称"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:text="店铺状态"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffbf4d" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                 >

                <ImageView
                    android:id="@+id/nice"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginLeft="5dp"

                    android:background="#0fff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/orangenice" />

                <TextView
                    android:id="@+id/Num1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:layout_gravity="center_vertical"
                    android:text="Num1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/nice"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_marginLeft="5dp"

                    android:background="#0fff"
                    android:scaleType="fitCenter"
                    android:src="@drawable/blacklow" />

                <TextView
                    android:id="@+id/Num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:text="Num2"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textIsSelectable="true"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/qisong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="起送价"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/Num3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="¥ 10.0"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/peisong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="配送价"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/Num4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="¥ 0.0"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/edict" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ebebeb"
        android:orientation="horizontal"
        android:layout_below="@id/ll2"
        android:weightSum="5"
        android:id="@+id/ll3">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"

            android:layout_weight="5"
            android:background="#ffffff"
            android:spinnerMode="dropdown"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/searchbtn">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/search"
                />

            <TextView
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:textSize="35px"
                android:scrollbarSize="52px"
                android:text="输入商品进行搜索"
                android:background="#fff"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll3"
        android:id="@+id/rl1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#86f6f67c"
            android:id="@+id/addbtn">

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:id="@+id/add_image"
                android:scaleType="fitCenter"
                android:src="@drawable/yellow_add"
                android:paddingTop="5px"
                android:paddingBottom="5px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="添加商品"
                android:layout_gravity="center_vertical"
                android:textColor="#ff9900"
                android:layout_centerHorizontal="true"
                android:id="@+id/addtv" />

        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.66"
       android:layout_below="@id/rl1"
        android:background="#fff"
        android:choiceMode="none" />
</RelativeLayout>