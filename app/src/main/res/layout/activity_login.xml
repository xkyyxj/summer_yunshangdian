<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:background="#ffffff"
    android:orientation="vertical" >
    
	<ImageView
        android:id="@+id/activity_login_user_icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_register_icon"
        android:contentDescription="@string/app_name"/>
    
    <EditText
        android:id="@+id/ac_login_user_name"
        android:layout_width="fill_parent"
        android:hint="@string/wqch_activity_login_password_hint"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/user"
        android:layout_below="@id/activity_login_user_icon"
        android:drawablePadding="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"/>
    
    <EditText
        android:id="@+id/ac_login_user_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/wqch_activity_login_user_hint"
        android:layout_below="@id/ac_login_user_name"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"/>
    
    <ImageButton
        android:id="@+id/login"
        android:layout_marginTop="10dp"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/ac_login_user_password"
        android:background="@drawable/activity_login_login"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"/>
    
    <ImageButton
        android:id="@+id/register_button"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:layout_below="@id/login"
        android:layout_alignRight="@id/ac_login_user_password"
        android:layout_marginTop="10dp"
        android:background="@drawable/activity_login_newuser"
        android:contentDescription="@string/app_name" />
    
</RelativeLayout>
