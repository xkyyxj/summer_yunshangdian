<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:id="@+id/shop_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="shop_name"/>

    <EditText
        android:id="@+id/order_state_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_name"
        android:hint="order_state"/>

    <EditText
        android:id="@+id/comm_state"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_state_input"
        android:hint="comm_state:0/1/2"/>

    <Button
        android:id="@+id/button1"
        android:layout_below="@id/comm_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="upload"/>

    <Button
        android:id="@+id/upload_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="uplaod_pic"
        android:layout_below="@id/button1"/>

</RelativeLayout>
